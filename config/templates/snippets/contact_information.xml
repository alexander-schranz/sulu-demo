<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>contact_information</key>

    <meta>
        <title lang="en">Contact Information</title>
        <title lang="de">Kontaktinformation</title>
    </meta>

    <areas>
        <!-- @see https://docs.sulu.io/en/2.1/cookbook/default-snippets.html -->
        <area key="footer_contact_information">
            <meta>
                <title lang="en">Footer Contact Information</title>
                <title lang="de">Footer Kontaktinformation</title>
            </meta>
        </area>
    </areas>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>

            <tag name="sulu.node.name"/>
        </property>

        <property name="contact" type="single_account_selection" mandatory="true">
            <meta>
                <title lang="en">Contact</title>
                <title lang="de">Kontakt</title>
            </meta>
        </property>
    </properties>
</template>
